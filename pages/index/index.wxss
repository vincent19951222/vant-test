page {
  height: 100vh;
  background-color: #F5F7FA;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.chat-list {
  flex: 1;
  width: 100%;
}

.chat-content {
  padding: 32rpx 0;
}

.time-divider {
  display: flex;
  justify-content: center;
  margin-bottom: 32rpx;
}

.time-divider text {
  font-size: 24rpx;
  color: #94a3b8;
  background-color: rgba(241, 245, 249, 0.5);
  padding: 4rpx 16rpx;
  border-radius: 12rpx;
}
