page {
  height: 100vh;
  background-color: #F5F7FA;
  display: flex;
  flex-direction: column;
}

.container {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* Search */
.search-container {
  background: white;
  padding: 16rpx 32rpx 32rpx;
  border-bottom-left-radius: 48rpx;
  border-bottom-right-radius: 48rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.03);
  z-index: 10;
  position: sticky;
  top: 0;
}

.search-box {
  position: relative;
  width: 100%;
}

.search-icon {
  position: absolute;
  left: 24rpx;
  top: 24rpx;
  width: 40rpx;
  height: 40rpx;
  z-index: 1;
}

.search-input {
  width: 100%;
  background: #f8fafc;
  border: 1px solid #f1f5f9;
  border-radius: 24rpx;
  padding: 20rpx 32rpx 20rpx 80rpx;
  font-size: 30rpx;
  box-sizing: border-box;
  height: 88rpx;
}

.placeholder {
  color: #94a3b8;
}

/* Content */
.content {
  flex: 1;
  padding: 40rpx 32rpx 0;
  box-sizing: border-box;
}

.section {
  margin-bottom: 48rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24rpx;
  padding: 0 4rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #1e293b;
}

.section-more {
  font-size: 24rpx;
  color: #2563eb;
  font-weight: 500;
}

/* Grid */
.grid-container {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  gap: 24rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 16rpx;
}

.grid-icon-box {
  width: 112rpx;
  height: 112rpx;
  border-radius: 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-blue { background-color: #eff6ff; color: #2563eb; }
.bg-indigo { background-color: #eef2ff; color: #4f46e5; }
.bg-orange { background-color: #fff7ed; color: #ea580c; }
.bg-emerald { background-color: #ecfdf5; color: #059669; }

.grid-icon {
  width: 48rpx;
  height: 48rpx;
}

.grid-text {
  font-size: 24rpx;
  font-weight: 500;
  color: #475569;
}

/* Horizontal Scroll Docs */
.horizontal-scroll {
  width: 100%;
  overflow-x: auto;
  white-space: nowrap;
}

.card-container {
  display: flex;
  gap: 24rpx;
  padding-bottom: 8rpx;
}

.doc-card {
  flex-shrink: 0;
  width: 480rpx;
  background: white;
  padding: 32rpx;
  border-radius: 24rpx;
  border: 1px solid #f1f5f9;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.02);
  display: flex;
  flex-direction: column;
}

.doc-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  margin-bottom: 16rpx;
}

.doc-icon-box {
  width: 64rpx;
  height: 64rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.bg-blue-light { background-color: #dbeafe; }
.bg-green-light { background-color: #dcfce7; }

.doc-icon {
  width: 32rpx;
  height: 32rpx;
}

.tag-new {
  font-size: 20rpx;
  color: #ef4444;
  background: #fef2f2;
  padding: 4rpx 12rpx;
  border-radius: 8rpx;
  font-weight: 500;
}

.doc-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #1e293b;
  margin-bottom: 4rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.doc-info {
  font-size: 24rpx;
  color: #94a3b8;
}

/* List */
.list-container {
  background: white;
  border-radius: 32rpx;
  box-shadow: 0 2rpx 4rpx rgba(0,0,0,0.02);
  border: 1px solid #f1f5f9;
}

.list-item {
  display: flex;
  align-items: center;
  padding: 32rpx;
  gap: 24rpx;
  border-bottom: 1px solid #f8fafc;
}

.list-item:last-child {
  border-bottom: none;
}

.rank {
  font-size: 36rpx;
  font-weight: bold;
  font-style: italic;
  font-family: serif;
}

.rank-1 { color: #fb923c; }
.rank-2 { color: #cbd5e1; }
.rank-3 { color: #cbd5e1; }

.list-content {
  flex: 1;
}

.list-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #334155;
  margin-bottom: 4rpx;
}

.list-desc {
  font-size: 24rpx;
  color: #94a3b8;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}
