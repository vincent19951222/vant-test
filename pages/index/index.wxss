page {
  height: 100vh;
  display: flex;
  flex-direction: column;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.chat-container {
  flex: 1;
  background-color: #F5F7FA;
  overflow-y: auto;
  overflow-x: hidden;
  width: 100%;
  box-sizing: border-box;
}

.message-list {
  padding: 20px 16px;
  padding-bottom: 300rpx; /* Space for bottom input */
  width: 100%;
  box-sizing: border-box;
}

/* 底部输入框容器 */
.fixed {
  position: fixed;
  width: 100%;
  max-width: 100vw;
  box-sizing: border-box;
}

/* 修复横向溢出 */
view, scroll-view, text, image, input, textarea {
  box-sizing: border-box;
}

.max-w-85 {
  max-width: 85%;
}

.max-w-80 {
  max-width: 80%;
}

.bg-primary {
  background-color: var(--primary-color);
}

.text-primary {
  color: var(--primary-color);
}

.text-secondary {
  color: var(--text-secondary);
}

.rounded-2xl {
  border-radius: 16px;
}

.rounded-tl-none {
  border-top-left-radius: 0;
}

.rounded-tr-none {
  border-top-right-radius: 0;
}

.shadow-sm {
  box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
}

.shadow-lg {
  box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
}

.fade-in-up {
  animation: fadeInUp 0.5s ease-out forwards;
  opacity: 0;
  transform: translateY(10px);
}

@keyframes fadeInUp {
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

