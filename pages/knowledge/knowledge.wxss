/* pages/knowledge/knowledge.wxss */
.container {
  height: 100vh;
  background-color: #F5F7FA;
  display: flex;
  flex-direction: column;
}

.sticky-header {
  position: sticky;
  top: 0;
  z-index: 30;
}

.content-scroll {
  flex: 1;
  overflow-y: auto;
}

.section {
  margin-bottom: 24rpx;
}

.grid {
  display: grid;
}

.grid-cols-4 {
  grid-template-columns: repeat(4, minmax(0, 1fr));
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-between {
  justify-content: space-between;
}

.gap-2 { gap: 16rpx; }
.gap-3 { gap: 24rpx; }

.w-14 { width: 112rpx; }
.h-14 { height: 112rpx; }

.rounded-2xl { border-radius: 32rpx; }
.rounded-xl { border-radius: 24rpx; }
.rounded-lg { border-radius: 16rpx; }
.rounded-b-3xl { border-bottom-left-radius: 48rpx; border-bottom-right-radius: 48rpx; }

.text-base { font-size: 30rpx; }
.text-xs { font-size: 24rpx; }
.text-sm { font-size: 28rpx; }
.text-lg { font-size: 36rpx; }

.font-bold { font-weight: 700; }
.font-medium { font-weight: 500; }

.text-slate-800 { color: #1e293b; }
.text-slate-700 { color: #334155; }
.text-slate-600 { color: #475569; }
.text-slate-400 { color: #94a3b8; }
.text-blue-600 { color: #2563eb; }
.text-red-500 { color: #ef4444; }

.bg-white { background-color: #ffffff; }
.bg-red-50 { background-color: #fef2f2; }
.bg-slate-50 { background-color: #f8fafc; }

.shadow-sm { box-shadow: 0 1px 2px 0 rgba(0, 0, 0, 0.05); }

.border { border-width: 1px; border-style: solid; }
.border-slate-100 { border-color: #e2e8f0; }
.border-b { border-bottom-width: 1px; border-bottom-style: solid; }
.border-slate-50 { border-color: #f8fafc; }

.truncate {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.whitespace-nowrap { white-space: nowrap; }

.flex-shrink-0 { flex-shrink: 0; }
.w-60 { width: 480rpx; }

.p-4 { padding: 32rpx; }
.p-5 { padding: 40rpx; }
.px-1 { padding-left: 8rpx; padding-right: 8rpx; }
.pb-32 { padding-bottom: 256rpx; }
.mb-3 { margin-bottom: 24rpx; }
.mb-2 { margin-bottom: 16rpx; }
.mt-0.5 { margin-top: 4rpx; }

.-mx-5 { margin-left: -40rpx; margin-right: -40rpx; }
.px-5 { padding-left: 40rpx; padding-right: 40rpx; }
.pb-2 { padding-bottom: 16rpx; }

.active-scale-95:active {
  transform: scale(0.95);
}

.transition-transform {
  transition-property: transform;
  transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
  transition-duration: 150ms;
}

.inline-block { display: inline-block; }
.align-top { vertical-align: top; }
